<div class="container py-5" dir="rtl">
  <h1 class="text-center text-primary mb-4">
    <i class="bi bi-book"></i> ספרים
  </h1>

  <% for (let i=0; i < books.length; i++) { const book=books[i]; %>
    <div class="card mb-4 shadow-sm">
      <div class="row g-0 align-items-center">
        <div class="col-md-2 text-center p-2">
          <img src="<%= book.image %>" alt="Book image" class="img-fluid rounded book-image" />
        </div>
        <div class="col-md-8">
          <div class="card-body text-end">
            <h5 class="card-title mb-2">
              <%= book.title %>
            </h5>
            <p class="card-text mb-1">מאת <strong>
                <%= book.author %>
              </strong></p>
            <p class="card-text">מחיר: ₪<%= book.price %>
            </p>
          </div>
        </div>
        <div class="col-md-2 text-center">
          <a href="/purchase/<%= book.id %>" class="btn btn-success mt-3 mt-md-0">
            לרכישה <i class="bi bi-cart"></i>
          </a>
        </div>
      </div>
    </div>
    <% } %>
</div>

<style>
  .book-image {
    max-height: 120px;
    width: auto;
    object-fit: contain;
  }
</style>