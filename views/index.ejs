<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Parking Finder</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/style.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f8f9fa;
    }
    h1 {
      margin-bottom: 30px;
    }
    .lot-list {
      padding-left: 0;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="\">
      <img src="/img/logo.svg" width="30" height="30" class="d-inline-block align-top" alt="">
        Parking Finder TLV
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

  <div class="container py-5">
    <h1 class="text-center text-primary" id="message">
      <i class="bi bi-p-circle-fill"></i> Find Nearby Parking
    </h1>

    <div class="row mb-4">
      <div class="col-md-8 mx-auto">
        <div class="input-group mb-3">
          <input id="textField" type="text" class="form-control" placeholder="Type your name">
          <button id="helloBtn" class="btn btn-outline-primary">
            <i class="bi bi-hand-thumbs-up"></i> Say Hello
          </button>
        </div>

        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" id="residentCheckbox">
          <label class="form-check-label" for="residentCheckbox">I am a resident</label>
        </div>

        <div class="d-grid gap-2">
          <button id="searchBtn" class="btn btn-success">
            <i class="bi bi-geo-alt-fill"></i> Search Parking Lots
          </button>

          <button id="incrementBtn" class="btn btn-secondary">
            Visits: <%= counter %>
          </button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10 mx-auto">
        <ul id="parkingLots" class="lot-list list-group"></ul>
      </div>
    </div>
  </div>

  <script src="/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>
